


<% include partials/navbar.ejs %>

<body>

      <style>

        h2, h3, h4, p {
          padding: 5px 0 0 50px;
        }

        .user-block {
          background-color: #0D9ADC;
          padding: 10px 0px 10px 0;
          margin: 0 auto;
        }

        h4 {
          font-size: 12px;
        }

      </style>


<div class="api-block">

  <h2><u><strong>Generated Articles</strong></u></h2>
  <% apiArticles.forEach((everyAPIArticle) => {%>


    <h3><strong><%= everyAPIArticle.title %></strong></h3>

        <p><strong> <%= everyAPIArticle.source.name %></strong>
          <br>
           <strong>By:</strong> <%= everyAPIArticle.author %>
          <br>
         <%= everyAPIArticle.description %>
          <br>
            <h4><i><%= everyAPIArticle.url %></i>
          <br>
            <%= everyAPIArticle.publishedAt %></p></h4>
    <%})%>

</div>

<div class="user-block">

  <h2><u><strong>User Articles</strong></u></h2>
  <% userArticles.forEach((allUserArts) => {%>

    <h3><strong><%= allUserArts.title %></strong></h3>

     <p><strong> <%= allUserArts.name %></strong>
      <br>
        <strong>By:</strong> <%= allUserArts.author %>
      <br>
        <%= allUserArts.description %>
      <br>
        <h4><i><%= allUserArts.url %></i>
      <br>
        <%= allUserArts.publishedAt %> </p></h4>

    <%})%>

</div>

</body>

